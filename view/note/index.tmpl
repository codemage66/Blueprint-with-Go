{{define "title"}}Notepad{{end}}
{{define "head"}}{{end}}
{{define "content"}}
<div class="container">
	<div class="page-header">
		<h1>{{.first_name}}'s Notepad</h1>
	</div>
	<p>
		<a title="Add Note" class="btn btn-primary" role="button" href="{{$.BaseURI}}notepad/create">
			<span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add Note
		</a>
	</p>
	
	{{range $n := .items}}
		<div class="panel panel-default">
			<div class="panel-body">
				<p>{{.Content}}</p>
				<div style="display: inline-block;">
					<a title="View Note" class="btn btn-info" role="button" href="{{$.BaseURI}}notepad/view/{{.ID}}">
						<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> View
					</a>
					<a title="Edit Note" class="btn btn-warning" role="button" href="{{$.BaseURI}}notepad/edit/{{.ID}}">
						<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
					</a>
					
					<form class="button-form" method="post" action="{{$.BaseURI}}notepad/{{.ID}}">
						<button type="submit" class="btn btn-danger" />
							<span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete
						</button>
						<input type="hidden" name="_token" value="{{$.token}}">
						<input type="hidden" name="_method" value="DELETE">
					</form>
					
				</div>
				<span class="pull-right" style="margin-top: 14px;">{{PRETTYTIME .CreatedAt .UpdatedAt}}</span>
			</div>
		</div>
	{{end}}
	
	{{template "footer" .}}
</div>
{{end}}
{{define "foot"}}{{end}}